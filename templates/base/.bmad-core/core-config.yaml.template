markdownExploder: true

# BMad Studio Core Configuration Template
# This file is generated based on project analysis and briefing

# Project Information
project:
  name: "{{PROJECT_NAME}}"
  type: {{PROJECT_TYPES}}
  complexity: "{{COMPLEXITY}}"
  version: "1.0.0"
  generated: "{{GENERATED_DATE}}"
  template_version: "1.0.0"

# Agent Configuration
agents:
  available: {{SELECTED_AGENTS}}
  default: "bmad-orchestrator"
  autoActivation: true
  specializations: {{AGENT_SPECIALIZATIONS}}

# Workflow Configuration  
workflows:
  enabled: {{ENABLED_WORKFLOWS}}
  default: "{{DEFAULT_WORKFLOW}}"
  parallelExecution: {{PARALLEL_EXECUTION}}
  validation: {{WORKFLOW_VALIDATION}}

# MCP and Claude Integration
mcp:
  enabled: true
  hooks: {{MCP_HOOKS}}
  tools: {{MCP_TOOLS}}
  customHooks: {{CUSTOM_HOOKS}}

# Validation Framework
validation:
  preCommitHooks: true
  storyValidation: true
  performanceMonitoring: {{PERFORMANCE_MONITORING}}
  securityChecks: {{SECURITY_CHECKS}}
  architectureValidation: {{ARCHITECTURE_VALIDATION}}

# Development Configuration
development:
  devLoadAlwaysFiles: {{DEV_LOAD_FILES}}
  devDebugLog: ".ai/debug-log.md"
  devStoryLocation: "docs/stories"
  testFramework: "{{TEST_FRAMEWORK}}"
  lintingEnabled: true

# Documentation
documentation:
  prdFile: "docs/prd.json"
  architectureFile: "docs/architecture.json"
  apiDocsEnabled: {{API_DOCS_ENABLED}}
  autoGenerateDocs: true

# Quality Assurance
qa:
  qaLocation: "docs/qa"
  testCoverage: {{TEST_COVERAGE_TARGET}}
  codeQualityGates: true
  performanceBudgets: {{PERFORMANCE_BUDGETS}}

# Monitoring and Analytics
monitoring:
  enabled: {{MONITORING_ENABLED}}
  metrics: {{MONITORING_METRICS}}
  alerts: {{MONITORING_ALERTS}}
  dashboards: {{MONITORING_DASHBOARDS}}

# Custom Technical Documents
customTechnicalDocuments: {{CUSTOM_DOCS}}

# Slash Command Prefix
slashPrefix: "BMadStudio"